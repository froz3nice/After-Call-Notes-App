<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hint_bg">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:alpha=".5"
        android:src="@drawable/tap_to_dismiss"/>

    <ImageView
        android:id="@+id/arrow_left"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src="@drawable/hint_arrow"
        android:rotation="180"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="parent" />


    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src="@drawable/hint_arrow"
        android:rotation="180"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/hint_thug"
        app:layout_constraintBottom_toTopOf="@id/arrow_left"
        android:layout_width="130dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/arrow_left"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:text="Tap here to start thug life video!"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/hint_gallery"
        app:layout_constraintBottom_toTopOf="@id/arrow_right"
        android:layout_width="130dp"
        android:layout_marginStart="20dp"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/arrow_right"
        android:layout_marginBottom="20dp"
        android:text="Tap here to see what you made!"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>