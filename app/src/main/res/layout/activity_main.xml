<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/activity_main"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.braz.prod.DankMemeStickers.Activities.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/adsContainer">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_id">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>


        <ImageView
            android:id="@+id/photo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:clickable="true"
            app:srcCompat="@drawable/take_photo_button_selector"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:layout_above="@+id/adsContainer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/choose"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:layout_marginBottom="18dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/gallery_button_selectore"
            android:layout_above="@+id/adsContainer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/upgrade_button_selector"
        android:id="@+id/upgrade"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/premium"
        android:id="@+id/premium"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>

